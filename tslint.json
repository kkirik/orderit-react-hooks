{
  "extends": ["tslint:latest", "tslint-config-prettier", "tslint-config-airbnb"],
  "rules": {
    "variable-name": [
      false,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "quotemark": [true, "single", "jsx-double"],
    "semicolon": [true, "always", "strict-bound-class-methods"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "member-access": false,
    "max-line-length": [true, 100],
    "curly": [true, "ignore-same-line"],
    "indent": [true, "spaces", 2],
    "ordered-imports": [
      true,
      { "import-sources-order": "any", "named-imports-order": "case-insensitive" }
    ],
    "import-name": false,
    "function-name": false,
    "no-implicit-dependencies": false
  }
}
